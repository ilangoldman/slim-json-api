

{
    "header": {
        "user-id": "firebase-id",
        "user-type": "empresa|investidor",
        "id": "id(empresa|investidor)"
    },
    "json-request": {
        "data": {
            "attributes": "columns",
            "relationships": "fk is inside the table"
        },
        "include": "fk is on the other table"
    },
    "json-response": {
        "data": {
            "attributes": "columns",
            "relationships": "fk to other tables"
        },
        "include": "data of the relationships"
    }
}

// api routes

// investidor
{
    "cadastro": {
        "post":"/investidor"
    },
    "login": {
        "get": "/investidor/(id-investidor)",
        "info": ["pontuacao","amigo","conta","endereco","conquista","beneficio"] 
    },
    "config": {
        "put": "/investidor/(id-investidor)",
        "include": ["endereco","conta_bancaria"]
    },
    "deletar_conta": {
        "delete": "/investidor/(id-investidor)"
    },
    "convidar_amigo": {
        "post": "/amigo",
        "relationships": "(empresa|investidor)"
    },
    "add_conquista": {
        "post": "/conquista/(id-conquista)"
    },

    "resumo_carteira": {
        "get": "/carteira/(id-investidor)"
    },
    "empresas_investidas": {
        "get": "/investimento"
    },
    "detalhes_investimento": {
        "get": "/investimento/(id-investimento)"
    },
    "ver_movimentacao": {
        "get": "/movimentacao"
    },
    "ver_movimentacao_filtro": {
        "get": "/movimentacao?periodo='INT_DIAS'"
    },

    "oportunidades": {
        "get": "/oportunidade"
    },
    "detalhes_oportunidade": {
        "get": "/oportunidade/(id-emprestimo)"
    },

    "notificacao": {
        "get": "/notificacao"
    },
    "nao_lidas_notificacao": {
        "get": "/notificacao?lidas='false'"
    },
    "info_notificacao": {
        "get": "/notificacao/(id-notificao)"
    }
}
    
// empresa
{
    "cadastro": {
        "post": "/empresa"
    },
    "login": {
        "get": "/empresa/(id-empresa)",
        "info": [
            "amigo",
            "conta",
            "endereco"
        ]
    },
    "config": {
        "put": "/empresa/(id-empresa)",
        "include": [
            "endereco",
            "conta_bancaria"
        ]
    },
    "deletar_conta": {
        "delete": "/empresa/(id-empresa)"
    },
    "convidar_amigo": {
        "post": "/amigo",
        "relationships": "(empresa|investidor)"
    },

    "pedir_emprestimo": {
        "post": "/emprestimo"
    },
    "editar_emprestimo": {
        "put": "/emprestimo/(id-emprestimo)"
    },
    "ver_emprestimos": {
        "get": "/emprestimo"
    },
    "ver_detalhe_emprestimo": {
        "get": "/emprestimo/(id-emprestimo)"
    },

    "transferencias": {
        "get": "/parcela"
    },

    "notificacao": {
        "get": "/notificacao"
    },
    "nao_lidas_notificacao": {
        "get": "/notificacao?lidas='false'"
    },
    "info_notificacao": {
        "get": "/notificacao/(id-notificao)"
    }

}





































